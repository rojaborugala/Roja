//product of 2 numbers
#include<iostream>
using namespace std;
int main()
{
int a,b;
int result;
cout<<"Enter first number =";
cin>>a;
cout<<"Enter second number =";
cin>>b;
result=a*b;
cout<<"product = "<<result;
}
